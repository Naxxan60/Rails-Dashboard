</nav>

<div class="container-fluid">

	  <div class="row row-offcanvas row-offcanvas-left">

		 <div class="col-sm-3 col-md-2 sidebar-offcanvas" id="sidebar" role="navigation">

			<ul class="nav nav-sidebar">
			  <li class="active"><a href="#">Overview</a></li>
			  <li><a href="archives/new">(Re)Load GithubArchive data</a></li>
			</ul>

		</div><!--/span-->

		<div class="main">

		  <!--toggle sidebar button-->
		  <h1 class="page-header">
			Dashboard Github Archive
		  </h1>

		  <div class="row">

			<div class="clearfix">
				<h2>Nombre d'Events</h2>
				<% @DictNbEvent.each do |key, value| %>
				<div class="col-xs-6 col-sm-3">
					<div class="panel panel-default">
						<div class="panel-heading"><%= key %></div>
						<div class="panel-body">
							<%= value %>
						</div>
					</div>
				</div>
				<% end %>
			</div>
			<div class="clearfix">
				<h2>Meilleur Watcher</h2>
				<div class="col-xs-6">
					<ul class="list-group">
					  	<li class="list-group-item">
							<span class="badge"><%= @max %></span>
							<%= @maxName %>
					  	</li>
					</ul>
				</div>
			</div>
			<div class="clearfix">
				<h2>Top des Watchers </h2>

				<% @count = 0 %>
				<% @DictActor.each do |key, value| %>
					<% if @count == 0 || @count == @DictActor.count / 2 %>
					<div class="col-xs-6">
						<ul class="list-group">
					<% end %>
						<% @count += 1 %>
					  	<li class="list-group-item">
							<span class="badge"><%= value %></span>
							<%= @count %> | <%= key %>
					  	</li>
					<% if @count == @DictActor.count / 2 || @count == @DictActor.count  %>
						</ul>
					</div>
					<% end %>
				<% end %>
			</div>
		  </div>
	  </div><!--/row-->
	</div>
</div><!--/.container-->

